find . -name "*.htm" -print -exec perl -pi -e 's/Ñ/&Ntilde;/g;s/ñ/&ntilde;/g;s/Ú/&Uacute;/g;s/ú/&uacute;/g;s/¿/&iquest;/g' {} \;   


