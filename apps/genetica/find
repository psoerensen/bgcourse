find . -name "*.htm" -print -exec perl -pi -e 's/HW/H-W/g' {} \;

cat ./*/*.htm |perl -ape  'if(/fris/) {print $_};chomp;s/.*// '
 
more ./*/*.htm |awk '/^\./{a=$1};!/\./{print a "  "$0}'|perl -ape  'if(/fris/) {print $_};chomp;s/.*// '

more ./*/*.htm |gawk '!/\./{print a"\t "$0};/^\./{a=$1};'|awk '/estad/ {print $0;} '

